{
  "name": "nutriabb-mvp",
  "version": "1.0.0",
  "description": "Nutriabb MVP - Nutrition tracking application with personalized calorie and macronutrient calculations",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "node scripts/setup-test-db.js && jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "test:integration": "node scripts/setup-test-db.js && jest --testPathPattern=tests/integration --runInBand",
    "test:coverage": "node scripts/setup-test-db.js && jest --coverage --runInBand",
    "test:setup": "node scripts/setup-test-db.js",
    "db:init": "node src/database/initDb.js init",
    "db:reset": "node src/database/initDb.js reset",
    "db:drop": "node src/database/initDb.js drop",
    "db:migrate": "node src/database/migrate.js up",
    "db:migrate:status": "node src/database/migrate.js status",
    "db:setup": "npm run db:init",
    "setup": "node scripts/setup.js",
    "setup:full": "node scripts/setup.js --with-tests",
    "prod": "node scripts/start-production.js",
    "prod:simple": "NODE_ENV=production node src/server.js"
  },
  "keywords": [
    "nutrition",
    "health",
    "calories",
    "macronutrients",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  }
}
