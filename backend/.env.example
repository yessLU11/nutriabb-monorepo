# Environment Configuration Template for Nutriabb MVP
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nutriabb_mvp
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# JWT Configuration
JWT_SECRET=supersecreto123
JWT_EXPIRES_IN=1d

# Bcrypt Configuration
# Higher rounds = more secure but slower (recommended: 12 for production, 4 for testing)
BCRYPT_ROUNDS=12

# Optional: Logging Configuration
LOG_LEVEL=info

# Optional: CORS Configuration (if needed for frontend integration)
# CORS_ORIGIN=http://localhost:3000